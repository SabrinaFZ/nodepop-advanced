<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div>
      <% getLocales().forEach(locale => { %>
        <a href="/change-lang/<%=locale%>"><%= locale.toUpperCase() %></a>&nbsp;
      <% }) %>
    </div>
    <h1><%= title %></h1>
    <% if(articles && articles.length > 0){ %>
      <% articles.forEach(function(value, i) { %>
      <div>
        <h2><strong><%= __('Ad') %> #
          <%= i+1 %>
          </strong>
        </h2>
        <p>
          <%= __('Product') %>: <%= value.name %>
        </p>
        <p>
          <%= value.sell ? __('To Sell') : __('To Search') %>
        </p>
        <p><%= __('Price') %>: <%= value.price %>$</p>
        <p> <%= __('Tags') %>
          <% value.tags.forEach(function(value){ %>
          <span>
            <%= value %> </span>
          <% }) %>
        </p>
        <img src="./images/<%= value.picture %>" alt="<%= value.picture %>">
      </div>
      <% }) %>
    <% } %>
    <div>
      <% if(tags && tags.length > 0){ %>
        <h2><strong>Tags</strong></h2>
        <ul>
        <% for(let i=0; i < tags.length; i++) { %>
          <li><%= tags[i] %> 
        <% } %>
        </ul>
      <% } %>
    </div>
  </body>
</html>
